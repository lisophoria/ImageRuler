{
  "name": "image-ruler",
  "version": "0.0.0",
  "description": "an electron app for measuring lengths in images",
  "author": {
    "name": "Victor Astakhov"
  },
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "ng:serve": "ng serve",
    "start": "npm-run-all -p ng:serve electron:serve",
    "ng:build": "ng build",
    "electron": "electron .",
    "electron:serve": "wait-on tcp:4200 && electron . --serve",
    "electron:start": "npm run ng:build && npm run electron",
    "package": "npm run ng:build && electron-builder --dir",
    "build": "npm run ng:build && electron-builder -l"
  },
  "build": {
    "appId": "com.lisophoria.imageruler",
    "productName": "Image Ruler",
    "files": [
      "**/*",
      "dist/**/*"
    ],
    "directories": {
      "output": "build",
      "buildResources": "dist"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.2.0",
    "@angular/common": "^14.2.0",
    "@angular/compiler": "^14.2.0",
    "@angular/core": "^14.2.0",
    "@angular/forms": "^14.2.0",
    "@angular/platform-browser": "^14.2.0",
    "@angular/platform-browser-dynamic": "^14.2.0",
    "@angular/router": "^14.2.0",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.2.2",
    "@angular/cli": "~14.2.2",
    "@angular/compiler-cli": "^14.2.0",
    "@types/jasmine": "~4.0.0",
    "electron": "^21.2.0",
    "electron-builder": "^23.6.0",
    "jasmine-core": "~4.3.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~4.7.2",
    "wait-on": "^6.0.1"
  }
}
